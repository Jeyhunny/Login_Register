@model LoginVM
@{
    ViewData["Title"] = "Login";
}


<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <div class="text-danger" asp-validation-summary="All"></div>
                              
                                    <form class="mx-1 mx-md-4" method="post" asp-action="Login">
                                    <h2 class="text-center"><strong>Login</strong></h2>


                                    <div class="form-group"><input class="form-control" asp-for="EmailOrUsername" placeholder="Email"></div>
                                    <span class="text-danger" asp-validation-for="EmailOrUsername"></span>


                                    <div class="form-group"><input class="form-control" asp-for="Password" placeholder="Password"></div>
                                    <span class="text-danger" asp-validation-for="Password"></span>

                                   
                                    <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Login</button></div><a asp-controller="Account" asp-action="Login" class="already"></a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
