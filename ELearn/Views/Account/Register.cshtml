@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100" style="background-color: #eee;">
    <div class="container my-5">
        <div class="container h-100 my-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="container my-5">
                                    <div class="register-photo ">
                                        <div class="form-container my-5">

                                            <div class="text-danger" asp-validation-summary="All"></div>

                                            <form method="post" asp-action="Register">
                                                <h2 class="text-center"><strong>Register</strong></h2>
                                                <div class="form-group"><input class="form-control" name="fullname" asp-for="FullName" placeholder="Fullname"></div>
                                                <span class="text-danger" asp-validation-for="FullName"></span>

                                                <div class="form-group"><input class="form-control" name="email" asp-for="Email" placeholder="Email"></div>
                                                <span class="text-danger" asp-validation-for="Email"></span>

                                                <div class="form-group"><input class="form-control" name="username" asp-for="Username" placeholder="Username"></div>
                                                <span class="text-danger" asp-validation-for="Username"></span>

                                                <div class="form-group"><input class="form-control" name="password" asp-for="Password" placeholder="Password"></div>
                                                <span class="text-danger" asp-validation-for="Password"></span>

                                                <div class="form-group"><input class="form-control" name="comfirmpassword" asp-for="ComfirmPassword" placeholder="Repeat your password"></div>
                                                <span class="text-danger" asp-validation-for="ComfirmPassword"></span>

                                              
                                                <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Register</button></div><a asp-controller="Account" asp-action="Register" class="already"></a>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
</section>